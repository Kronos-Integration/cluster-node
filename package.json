{
  "name": "kronos-cluster-node",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/kronos-cluster-node-systemd"
  ],
  "module": "src/kronos-cluster-node-cli.js",
  "description": "kronos cluster node sample application",
  "keywords": [
    "cluster",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "kronos-cluster-node": "src/kronos-cluster-node-cli.mjs",
    "kronos-cluster-node-systemd": "src/kronos-cluster-node-systemd-cli.mjs"
  },
  "scripts": {
    "start": "node bin/kronos-cluster-node",
    "test": "ava --timeout 2m",
    "posttest": "npm run prepare",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --node-arguments '--experimental-modules' --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg"
  },
  "dependencies": {
    "@kronos-integration/service": "^8.3.28",
    "@kronos-integration/service-admin": "^3.0.23",
    "@kronos-integration/service-authenticator": "^1.0.26",
    "@kronos-integration/service-health-check": "^5.0.25",
    "@kronos-integration/service-http": "^10.1.4",
    "@kronos-integration/service-ldap": "^2.1.24",
    "kronos-interceptor-decode-json": "1.1.0"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.8.2",
    "c8": "^7.1.0",
    "documentation": "^13.0.0",
    "npm-pkgbuild": "^6.11.19",
    "rollup": "^2.6.1",
    "semantic-release": "^17.0.7"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.3.2"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/kronos-cluster-node.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/kronos-cluster-node/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/kronos-cluster-node#readme",
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "backup": "etc/${name}/config.json",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/usr/lib/sysusers.d/${name}.conf": "pacman/sysusers.conf",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=241.0",
      "nginx-mainline": ">=1.17.10"
    },
    "install": "pacman/install.sh",
    "installdir": "/services/${name}",
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "hooks": "pacman/hooks.sh",
    "group": "services",
    "content-provider": {
      "systemd": {
        "units": {
          "${name}": "systemd/${name}*"
        }
      }
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-kronos-app",
      "arlac77/template-github"
    ]
  }
}