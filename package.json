{
  "name": "@kronos-integration/cluster-node",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "kronos cluster node sample application",
  "keywords": [
    "cluster",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "cluster-node": "./src/cluster-node-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --node-arguments '--experimental-modules' --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.62",
    "@kronos-integration/service": "^10.4.20",
    "@kronos-integration/service-admin": "^3.4.55",
    "@kronos-integration/service-authenticator": "^1.6.20",
    "@kronos-integration/service-health": "^5.0.147",
    "@kronos-integration/service-http": "^10.6.106",
    "@kronos-integration/service-ldap": "^4.0.80",
    "@kronos-integration/service-swarm": "^1.9.86"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "ava": "^4.1.0",
    "c8": "^7.1.0",
    "documentation": "^13.0.0",
    "npm-pkgbuild": "^8.2.3",
    "semantic-release": "^19.0.2"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.3"
  },
  "engines": {
    "node": ">=16.14.0"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/cluster-node.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/cluster-node/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/cluster-node#readme",
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "pkg": {
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pkg/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/usr/lib/sysusers.d/${name}.conf": "pkg/sysusers.conf",
      "/etc/nginx/sites/common/${name}.conf": "pkg/nginx.conf",
      "/usr/lib/systemd/system/": {
        "base": "systemd"
      },
      "${installdir}/": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ]
    },
    "hooks": "pacman/hooks.sh",
    "backup": "etc/${name}/config.json",
    "groups": "services",
    "depends": {
      "systemd": ">=250.4",
      "nginx-mainline": ">=1.21.4"
    },
    "group": "services",
    "install": "pacman/install.sh",
    "installdir": "/services/${name}"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild"
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
