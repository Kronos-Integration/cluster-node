{
  "name": "kronos-cluster-node",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/kronos-cluster-node-systemd"
  ],
  "module": "src/kronos-cluster-node-cli.js",
  "description": "kronos cluster node sample application",
  "keywords": [
    "cluster",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "kronos-cluster-node": "bin/kronos-cluster-node",
    "kronos-cluster-node-systemd": "bin/kronos-cluster-node-systemd"
  },
  "scripts": {
    "prepare": "rollup -c",
    "start": "node bin/kronos-cluster-node",
    "test": "ava --timeout 2m",
    "posttest": "npm run prepare && markdown-doctest",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --node-arguments '--experimental-modules' --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/kronos-cluster-node-cli.js --section=API",
    "lint": "documentation lint src/kronos-cluster-node-cli.js",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg"
  },
  "dependencies": {
    "@kronos-integration/service": "^8.3.21",
    "@kronos-integration/service-admin": "^3.0.17",
    "@kronos-integration/service-authenticator": "^1.0.18",
    "@kronos-integration/service-health-check": "^5.0.18",
    "@kronos-integration/service-http": "^10.0.8",
    "@kronos-integration/service-ldap": "^2.1.17",
    "caporal": "^1.3.0",
    "config-expander": "^11.0.12",
    "kronos-adapter-inbound-file": "2.0.15",
    "kronos-adapter-outbound-file": "2.0.14",
    "kronos-adapter-outbound-http": "1.0.13",
    "kronos-flow": "^2.5.34",
    "kronos-flow-control-step": "^3.0.11",
    "kronos-http-routing-step": "^4.3.24",
    "kronos-interceptor-decode-json": "1.1.0",
    "kronos-interceptor-http-request": "3.2.10",
    "kronos-interceptor-line-header": "^2.1.9",
    "kronos-interceptor-line-parser": "2.0.10",
    "kronos-interceptor-line-tokenizer-csv": "2.1.7",
    "kronos-interceptor-line-tokens2obj": "^2.1.8",
    "kronos-interceptor-message-handler": "2.1.5",
    "kronos-interceptor-object-data-processor-chunk": "^2.1.8",
    "kronos-interceptor-object-data-processor-row": "^1.2.11",
    "kronos-interceptor-stream-obj2string": "2.0.14",
    "kronos-service-admin": "^2.26.22",
    "kronos-service-consul": "2.20.2",
    "kronos-service-health-check": "2.11.0",
    "kronos-service-manager": "3.5.10",
    "kronos-service-uti": "1.2.10",
    "kronos-step-aggregate": "^1.4.6",
    "kronos-step-archive-tar": "2.0.13",
    "kronos-step-file": "^1.1.0",
    "kronos-step-gzip": "^2.0.13",
    "kronos-step-passthrough": "^2.2.0",
    "kronos-step-stdio": "^3.0.18",
    "kronos-step-system": "^2.0.10",
    "network-address": "^1.1.2",
    "npm-package-walker": "^4.0.5",
    "rebirth": "^2.0.0",
    "systemd-socket": "^0.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.6.0",
    "builtin-modules": "^3.1.0",
    "c8": "^7.1.0",
    "documentation": "^12.3.0",
    "npm-pkgbuild": "^6.11.9",
    "rollup": "^2.6.0",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-consts": "^1.0.1",
    "rollup-plugin-executable": "^1.5.3",
    "rollup-plugin-native": "^1.2.12",
    "semantic-release": "^17.0.4"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.2.12"
  },
  "engines": {
    "node": ">=13.12.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/kronos-cluster-node.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/kronos-cluster-node/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/kronos-cluster-node#readme",
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "backup": "etc/${name}/config.json",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    },
    "depends": {
      "systemd": ">=241.0"
    },
    "install": "pacman/install.sh",
    "installdir": "/services/${name}",
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "hooks": "pacman/hooks.sh",
    "additional-content": [
      "npm-dist",
      "npm-dependencies"
    ]
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-kronos-app",
      "arlac77/template-github"
    ]
  }
}