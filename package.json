{
  "name": "@kronos-integration/cluster-node",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "kronos cluster node sample application",
  "keywords": [
    "cluster",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "cluster-node": "./src/cluster-node-cli.mjs"
  },
  "scripts": {
    "test": "npm run test:ava",
    "test:ava": "ava --timeout 2m tests/*.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --node-arguments '--experimental-modules' --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.48",
    "@kronos-integration/service": "^10.4.7",
    "@kronos-integration/service-admin": "^3.4.40",
    "@kronos-integration/service-authenticator": "^1.6.0",
    "@kronos-integration/service-health": "^5.0.127",
    "@kronos-integration/service-http": "^10.6.78",
    "@kronos-integration/service-ldap": "^4.0.58",
    "@kronos-integration/service-swarm": "^1.9.86"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/exec": "^6.0.2",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "ava": "^3.15.0",
    "c8": "^7.1.0",
    "documentation": "^13.0.0",
    "npm-pkgbuild": "^6.12.72",
    "semantic-release": "^18.0.0"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.5.2"
  },
  "engines": {
    "node": ">=16.13.0"
  },
  "os": [
    "linux"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/cluster-node.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/cluster-node/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/cluster-node#readme",
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "backup": "etc/${name}/config.json",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/usr/lib/sysusers.d/${name}.conf": "pacman/sysusers.conf",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf",
      "/etc/nginx/sites/common/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=249.6",
      "nginx-mainline": ">=1.21.1"
    },
    "install": "pacman/install.sh",
    "installdir": "/services/${name}",
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "hooks": "pacman/hooks.sh",
    "group": "services",
    "content-provider": {
      "systemd": {
        "units": {
          "${name}": "systemd/${name}*"
        }
      }
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github",
      [
        "@semantic-release/exec",
        {
          "verifyConditionsCmd": "which makepkg",
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ],
      "@semantic-release/npm"
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
