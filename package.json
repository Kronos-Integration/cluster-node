{
  "name": "@kronos-integration/cluster-node",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "description": "kronos cluster node sample application",
  "keywords": [
    "cluster",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "cluster-node": "./src/cluster-node-cli.mjs"
  },
  "scripts": {
    "test": "ava --timeout 2m",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --node-arguments '--experimental-modules' --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^2.1.17",
    "@kronos-integration/service": "^9.2.10",
    "@kronos-integration/service-admin": "^3.1.21",
    "@kronos-integration/service-authenticator": "^1.1.15",
    "@kronos-integration/service-health-check": "^5.0.47",
    "@kronos-integration/service-http": "^10.2.6",
    "@kronos-integration/service-ldap": "^2.1.52",
    "@kronos-integration/service-swarm": "^1.6.13"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.12.1",
    "c8": "^7.1.0",
    "documentation": "^13.0.0",
    "npm-pkgbuild": "^6.12.7",
    "semantic-release": "^17.1.1"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.3.12"
  },
  "engines": {
    "node": ">=14.11.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/cluster-node.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/cluster-node/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/cluster-node#readme",
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "backup": "etc/${name}/config.json",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json",
      "/usr/lib/sysusers.d/${name}.conf": "pacman/sysusers.conf",
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "systemd": ">=246.5",
      "nginx-mainline": ">=1.19.2"
    },
    "install": "pacman/install.sh",
    "installdir": "/services/${name}",
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "hooks": "pacman/hooks.sh",
    "group": "services",
    "content-provider": {
      "systemd": {
        "units": {
          "${name}": "systemd/${name}*"
        }
      }
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "verifyConditionsCmd": "which makepkg",
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-github",
      "arlac77/template-kronos-app"
    ]
  }
}