{
  "name": "kronos-cluster-node",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin/kronos-cluster-node-systemd"
  ],
  "module": "src/kronos-cluster-node-cli.js",
  "description": "kronos cluster node sample application",
  "keywords": [
    "cluster",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "BSD-2-Clause",
  "bin": {
    "kronos-cluster-node": "bin/kronos-cluster-node",
    "kronos-cluster-node-systemd": "bin/kronos-cluster-node-systemd"
  },
  "scripts": {
    "prepare": "rollup -c",
    "start": "node bin/kronos-cluster-node",
    "test": "ava --timeout 2m",
    "posttest": "npm run prepare",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --node-arguments '--experimental-modules' --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp",
    "docs": "documentation readme src/kronos-cluster-node-cli.js --section=API",
    "lint": "documentation lint src/kronos-cluster-node-cli.js",
    "package": "npm-pkgbuild --npm-dist --npm-modules pkgbuild pacman makepkg"
  },
  "dependencies": {
    "@kronos-integration/service": "^8.3.23",
    "@kronos-integration/service-admin": "^3.0.19",
    "@kronos-integration/service-authenticator": "^1.0.20",
    "@kronos-integration/service-health-check": "^5.0.20",
    "@kronos-integration/service-http": "^10.0.10",
    "@kronos-integration/service-ldap": "^2.1.21",
    "kronos-interceptor-decode-json": "1.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "ava": "^3.7.0",
    "builtin-modules": "^3.1.0",
    "c8": "^7.1.0",
    "documentation": "^12.3.0",
    "npm-pkgbuild": "^6.11.9",
    "rollup": "^2.6.1",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-consts": "^1.0.1",
    "rollup-plugin-executable": "^1.5.3",
    "rollup-plugin-native": "^1.2.13",
    "semantic-release": "^17.0.6"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^2.2.13"
  },
  "engines": {
    "node": ">=13.13.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Kronos-Integration/kronos-cluster-node.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/kronos-cluster-node/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/kronos-cluster-node#readme",
  "config": {
    "socket": "/run/${name}/http/socket"
  },
  "systemd": {
    "units": {
      "${name}": "systemd/${name}*"
    }
  },
  "pacman": {
    "backup": "etc/${name}/config.json",
    "content": {
      "/usr/lib/tmpfiles.d/${name}.conf": "pacman/tmpfiles.conf",
      "/etc/${name}/config.json": "config/config.json"
    },
    "depends": {
      "systemd": ">=241.0"
    },
    "install": "pacman/install.sh",
    "installdir": "/services/${name}",
    "arch": [
      "aarch64",
      "armv7h",
      "x86_64"
    ],
    "hooks": "pacman/hooks.sh",
    "additional-content": [
      "npm-dist",
      "npm-dependencies"
    ],
    "dependes": {
      "nginx-mainline": ">=1.17.9"
    }
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --pkgver ${nextRelease.version} --npm-dist --npm-modules pkgbuild pacman makepkg"
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-kronos-app",
      "arlac77/template-github"
    ]
  }
}