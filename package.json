{
  "name": "@kronos-integration/cluster-node",
  "version": "0.0.0-semantic-release",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packageManager": "npm@11.10.0+sha512.8bc844e37892200305b98562f13c6c10849d10b3387c8cdaeb4d1a2e32746a79063cba9dd284cf28c26a01c3bf4169b7d3b31b4a5586cc970d6749463108073c",
  "description": "kronos cluster node sample application",
  "keywords": [
    "cluster",
    "kronos-integration",
    "systemd"
  ],
  "contributors": [
    {
      "name": "Markus Felten",
      "email": "markus.felten@gmx.de"
    }
  ],
  "license": "0BSD",
  "bin": {
    "cluster-node": "src/cluster-node-cli.mjs"
  },
  "scripts": {
    "test": "node --run test:ava",
    "test:ava": "ava --timeout 4m tests/*-ava.mjs tests/*-ava-node.mjs",
    "cover": "c8 -x 'tests/**/*' --temp-directory build/tmp ava --node-arguments '--experimental-modules' --timeout 2m && c8 report -r lcov -o build/coverage --temp-directory build/tmp"
  },
  "dependencies": {
    "@kronos-integration/interceptor-decode-json": "^4.0.11",
    "@kronos-integration/service": "^15.4.28",
    "@kronos-integration/service-admin": "^4.0.13",
    "@kronos-integration/service-authenticator": "^4.1.18",
    "@kronos-integration/service-health": "^8.0.38",
    "@kronos-integration/service-http": "^14.0.33",
    "@kronos-integration/service-ldap": "^6.1.1",
    "@kronos-integration/service-swarm": "^4.0.42"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "ava": "^6.4.1",
    "c8": "^10.1.2",
    "documentation": "^14.0.3",
    "npm-pkgbuild": "^20.6.2",
    "semantic-release": "^25.0.3"
  },
  "optionalDependencies": {
    "@kronos-integration/service-systemd": "^5.1.1",
    "mf-hosting": "^3.0.1"
  },
  "engines": {
    "node": ">=24.11.0"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "arm",
    "arm64",
    "x64"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kronos-Integration/cluster-node.git"
  },
  "bugs": {
    "url": "https://github.com/Kronos-Integration/cluster-node/issues"
  },
  "homepage": "https://github.com/Kronos-Integration/cluster-node#readme",
  "pkgbuild": {
    "content": {
      "${install.dir}": [
        {
          "type": "npm-pack"
        },
        {
          "type": "node-modules"
        }
      ],
      "${config.dir}config.json": "config/config.json",
      "${systemd.unit.dir}${name}.service": "pkg/${name}.service",
      "kronos": true
    },
    "example": true,
    "http.path": "/services/${name}/api",
    "kronos": true,
    "name": "cluster-node"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "inheritFrom": [
      "arlac77/template-arlac77-github",
      "arlac77/template-kronos-app"
    ]
  }
}
