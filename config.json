{
  "properties": {
    "base_port": 10000
  },

  "services": [{
    "name": "kronos"
  }, {
    "name": "koa-admin",
    "listen": {
      "retryTimeout": 600,
      "address": "0.0.0.0",
      "fromPort": "${base_port + 1}",
      "toPort": "${base_port + 8}"
    },
    "docRoot": "${directory('docroot')}"
  }, {
    "name": "admin",
    "ssh": {
      "hostKeys": [
        "${file('etc/hostKey')}"
      ],
      "port": "${base_port + 10}"
    }
  }, {
    "name": "registry",
    "checkInterval": 60,
    "port": 8500,
    "host": "localhost"
  }, {
    "name": "health-check",
    "memoryInterval": 60,
    "uptimeInterval": 60
  }]
}
