[Unit]
Description=kronos cluster node %H-%i
Requires=network-online.target
After=network-online.target
Wants=consul.service
After=consul.service
[Service]
Restart=on-failure
RestartSec=5000ms
User=kronos
WorkingDirectory=/var/kronos
ExecStart=/srv/kronos/bin/kronos-cluster-node --config /srv/kronos/config.json -d kronos:id=%H-%i -d node_instance=%i
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT
[Install]
WantedBy=multi-user.target
