{
  "name": "post-demo",
  "type": "kronos-flow",
  "description": "http post demo",
  "steps": {
    "s1": {
      "type": "kronos-http-routing",
      "listener": {
        "name": "demo",
        "port": 12345
      },
      "routes": {
        "/in": {
          "method": "POST",
          "target": "s2/in"
        }
      }
    },
    "s2": {
      "type": "kronos-copy",
      "endpoints": {
        "out": "s3/in",
        "log": "log/in"
      }
    },
    "s3": {
      "type": "kronos-copy",
      "endpoints": {
        "out": "s4/in",
        "log": "log/in"
      }
    },
    "s4": {
      "type": "kronos-stdout",
      "endpoints": {
        "log": "log/in"
      }
    },
    "log": {
      "type": "kronos-stderr"
    }
  }
}
