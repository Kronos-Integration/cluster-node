{
  "name": "http-post-demo",
  "type": "kronos-flow",
  "description": "http post demo",
  "steps": {
    "s1": {
      "type": "kronos-http-routing",
      "listener": "admin",
      "endpoints": {
        "in": {
          "serviceName" : "myService",
          "path": "/in",
          "method": "PUT",
          "target": "s2/in",
          "interceptors": [{
          "type" : "koa-request"
          }]
        }
      }
    },
    "s2": {
      "type": "kronos-file",
      "fileName": "/tmp/aFile"
    },
    "s3": {
      "type": "kronos-stdout",
      "endpoints": {
        "in": {
          "interceptors": [
            {
              "type": "timeout",
              "timeout": 2000
            },
            {
              "type": "request-limit",
              "limit": 10
            }
          ]
        }
      }
    }
  }
}
